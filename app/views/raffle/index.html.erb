<div ng-app="Raffler">

    <h1>Angular Raffle App</h1>
    <div ng-controller="RaffleCtrl">
      <form ng-submit="addEntry()">
        <input type="text" ng-model="newEntry.name">
        <input type="submit" value="Add">
      </form>
      <ul>
        <li ng-repeat="entry in entries">
        {{entry.name}}
        <span ng-show="entry.winner" ng-class="{highlight: entry == lastWinner}" class="winner">Winner</span>
        </li>
      </ul>

      <button ng-click="drawWinner()">Draw Wininer</button>
    </div>

  <div class="spacer">
    <h1>Data Binding</h1>
    <h2>Simple Data Binding</h2>
    <h3>Doesn't persist</h3>
    <input type="text" ng-model="data.message">
    {{data.message}}
  </div>

  <div class="spacer">
    <h2>Data Binding With Controller</h2>
    <h3>Doesn't persist</h3>

    <%# [> Areas of the page are managed by controllers. <] %>
    <div ng-controller="FirstCtrl">
      <form ng-submit="addName()">
        <input type="text" ng-model="animal.name">
        <input type="submit" value="Add Name">
      </form>

      <ul>
        <li ng-repeat="animal in animals">
        {{animal.name}}
        </li>
      </ul>
    </div>
  </div>

  <div class="spacer">
    <h2>Data Binding With Controller</h2>
    <h3>Persisted</h3>
    <div ng-controller="SecCtrl">
      <form ng-submit="addName()">
        <input type="text" ng-model="newPerson.name">
        <input type="submit" value="Add Name">
      </form>

      <ul>
        <li ng-repeat="people in persons">
        {{people.name}}
        </li>
      </ul>
    </div>
  </div>

  <div class="spacer">
    <h2>Shared Controller Data</h2>
    <h3>Using a Service</h3>
    <div ng-controller="SharedCtrlOne">
      <input type="text" ng-model="data.message">
      <h3>{{data.message}}</h3>
    </div>

    <div ng-controller="SharedCtrlTwo">
      <input type="text" ng-model="data.message">
      <h3>{{reversedMessage(data.message)}}</h3>
    </div>
  </div>

  <div class="spacer">
    <h2>Simple Calc</h2>
    <h3>Firing a computeNeeded() on input change</h3>
    <form ng-submit="requestFunding()" ng-controller="StartUpController">
      <p>Starting: <input ng-change="computeTotal()" ng-model="funding.startingEstimate"></p>
      <p>Total Needed: {{funding.needed}}</p>
      <input type="submit" value="Request Funding">

      <%# Behave the same in every browser. Angular takes care of the differences for you. %>
      <%# Do not operate on the global namespace.
      The expressions you specify can only access functions and data that is in the scope of the elementâ€™s controller. %>
      <input type="button" ng-click="reset()" value="Reset">
    </form>
  </div>

  <div class="spacer">
    <h3>Show Directive</h3>
    <div ng-controller="ShowCtrl">
      <div ng-class="{green: show}" ng-show="show">You can see this!</div>
      <input type="button" ng-click="toggle()" value="Show some text">
    </div>
  </div>
</div>
